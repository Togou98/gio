{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-pthread",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "main.cpp",
                "server.cpp",
                "poll.cpp",
                "socket.cpp",
                "httpParser.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}